<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="gruber-darker" _name="Gruber Darker" version="1.0">

  <author>Yehor Avramenko</author>
  <_description>Dark color scheme</_description>

  <!-- Gruber Darker Palette -->
  <color name="gruber-darker-fg"            value="#e4e4ef"/>
  <color name="gruber-darker-fg+1"          value="#f4f4ff"/>
  <color name="gruber-darker-fg+2"          value="#f5f5f5"/>
  <color name="gruber-darker-white"         value="#ffffff"/>
  <color name="gruber-darker-black"         value="#000000"/>
  <color name="gruber-darker-bg-1"          value="#101010"/>
  <color name="gruber-darker-bg"            value="#181818"/>
  <color name="gruber-darker-bg+1"          value="#282828"/>
  <color name="gruber-darker-bg+2"          value="#453d41"/>
  <color name="gruber-darker-bg+3"          value="#484848"/>
  <color name="gruber-darker-bg+4"          value="#52494e"/>
  <color name="gruber-darker-red-1"         value="#c73c3f"/>
  <color name="gruber-darker-red"           value="#f43841"/>
  <color name="gruber-darker-red+1"         value="#ff4f58"/>
  <color name="gruber-darker-green"         value="#73c936"/>
  <color name="gruber-darker-yellow"        value="#ffdd33"/>
  <color name="gruber-darker-brown"         value="#cc8c3c"/>
  <color name="gruber-darker-quartz"        value="#95a99f"/>
  <color name="gruber-darker-niagara-2"     value="#303540"/>
  <color name="gruber-darker-niagara-1"     value="#565f73"/>
  <color name="gruber-darker-niagara"       value="#96a6c8"/>
  <color name="gruber-darker-wisteria"      value="#9e95c7"/>


  <!-- Global Settings -->
  <style name="text"                        foreground="gruber-darker-fg" background="gruber-darker-bg"/>
  <style name="selection"                   background="gruber-darker-bg+3"/>
  <style name="cursor"                      foreground="gruber-darker-yellow"/>
  <style name="secondary-cursor"            foreground="gruber-darker-yellow"/>
  <style name="current-line"                background="gruber-darker-bg+1"/>
  <style name="line-numbers"                foreground="gruber-darker-bg+4" background="gruber-darker-bg"/>
  <style name="draw-spaces"                 background="gruber-darker-bg" foreground="gruber-darker-bg+1"/>
  <style name="background-pattern"          background="gruber-darker-bg"/>
  
  

  <!-- Bracket Matching -->
  <style name="bracket-match"               background="gruber-darker-bg+4"/>
  <style name="bracket-mismatch"            background="gruber-darker-red-1"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="gruber-darker-fg+1" background="gruber-darker-niagara-1"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gruber-darker-brown"/>
  <style name="def:shebang"                 foreground="gruber-darker-brown" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:string"                  foreground="gruber-darker-green"/>
  <style name="def:character"               use-style="def:string"/>
  <style name="def:special-char"            foreground="gruber-darker-green"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="gruber-darker-fg+1"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="gruber-darker-yellow" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="gruber-darker-quartz" />

  <!-- Others -->
  <style name="def:preprocessor"            foreground="gruber-darker-quartz"/>
  <style name="def:error"                   background="gruber-darker-red+1"/>
  <style name="def:warning"                 foreground="gruber-darker-brown" bold="true"/>
  <style name="def:keyword"                 foreground="gruber-darker-yellow" bold="true"/>
  <style name="def:builtin"                 foreground="gruber-darker-yellow"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="gruber-darker-green"/>
  <style name="diff:removed-line"           foreground="gruber-darker-red+1"/>
  <style name="diff:special-case"           foreground="white" bold="true"/>

  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>

